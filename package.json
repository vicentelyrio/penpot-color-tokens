{
  "name": "penpot-color-tokens",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite-live-preview",
    "build": "tsc -b && vite build && vite build --mode plugin",
    "build:ui": "tsc -b && vite build",
    "build:plugin": "tsc -b && vite build --mode plugin",
    "preview": "vite preview",
    "typecheck": "tsc -b --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@penpot/plugin-styles": "^1.2.0",
    "@penpot/plugin-types": "^1.2.0",
    "@skinnypete/color": "^1.0.3",
    "preact": "^10.26.4",
    "react-colorful": "^5.6.1",
    "react-fast-compare": "^3.2.2",
    "use-eye-dropper": "^1.7.1",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/preact": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "happy-dom": "^13.8.2",
    "postcss": "^8.5.3",
    "postcss-nested": "^7.0.2",
    "typescript": "~5.7.2",
    "vite": "^6.3.1",
    "vite-live-preview": "^0.3.2",
    "vitest": "^1.3.1"
  }
}
